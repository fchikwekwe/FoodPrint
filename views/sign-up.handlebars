<form method="POST" action="/sign-up">

    <!-- Decorative circles -->
    <div class="circle-left-small"></div>
    <!-- <div class="circle-right"></div> -->
    <div class="circle-top-med"></div>
    <div class="circle-center-purple"></div>
    <div class="circle-bottom-right"></div>
    <!-- <div class="circle-mid-left"></div> -->
    <div class="circle-bottom"></div>
    <div class="circle-blue-small"></div>

    <fieldset>
        <div class="login-card">

            <h1>Sign-up</h1>

            <!-- Check if user is already in system -->
            {{#if userExists}}
            <a href="/login">Your username is already in use. Click here to login.</a>
            {{/if}}

            <div class="input-group">
                <!-- Username -->
                <label for="username">Username</label><br>
                <input type="text" name="username" placeholder="username"/>

                <!-- Password -->
                <label for="password">Password</label><br>
                <input id="formPassword" type="password" name="password" placeholder="password"/>
                <!-- Show/Hide Password -->
                <input type="checkbox" onclick="showPassword()"> Show Password

                <br>
                <br>
            </div>

            <!-- Submit Button -->
            <span class="input-group-btn">
                <a href="/sign-up">
                    <input class="login login-submit" type="submit" name="login">Submit</button>
                </a>
            </span>

            <!-- Help Section -->
            <div class="login-help">
              <a href="/login">Login</a> â€¢ <a href="#">Forgot Password</a>
            </div>
    </fieldset>
</form>
