<div class="food-index">
    <h2>Add Food</h2>

    <form action="/profiles/{{profile._id}}?_method=PUT" method="POST">
        <div class="input-group">
            <!-- <h3 class="title-highlight">Search function coming soon!</h3> -->
           <!-- <input type="text" class="form-control" id="search" type="search" name="search" placeholder="Look up food here">
           <span class="input-group-btn">
                <a href="/profiles">
                  <button class="btn btn-primary" type="button">Search</button>
                </a>
           </span> -->
        </div>

        <h3 class="title-highlight">Select your food below!</h3>
        <br>
        <br>
        <select id="food-select" name="foodSelect">
                {{#each foods}}
                <option value="{{this._id}}">
                    {{this.name}}, {{this.description}}, {{this.CO2e}}
                </option>
                {{else}}
                <option value="">
                    No food yet...
                </option>
                {{/each}}
        </select>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <div class="container-fluid pull-right">
            <!-- Submit and Cancel Buttons -->
            <div id="food-submit" class="row">
                <a href="/profiles/{{profile.id}}">
                    <input class="login login-submit" value="Cancel">
                </a>
                <input class="login login-submit" type="submit" value="Submit">
            </div>
        </div>
    </form>
</div>

