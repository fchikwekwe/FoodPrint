<legend>Edit Food Items</legend>

<div class="input-group">
   <input type="text" class="form-control" id="search" type="search" name="search" placeholder="Look up food here">
   <span class="input-group-btn">
        <a href="/profiles">
          <button class="btn btn-primary" type="button">Search</button>
        </a>
   </span>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Delete Item</th>
            <th scope="col">Food Name</th>
            <th scope="col">CO2e</th>
        </tr>
    </thead>
    <tbody>
        {{#each profile.foods}}
        <tr>
            <th scope="row">
                <input id="{{this._id}}" type="checkbox"/>
            </th>
            <td>{{this.name}}</td>
            <td>{{this.CO2e}}</td>
        {{else}}
        <p>Nothing to delete</p>
        {{/each}}
        </tr>
    </tbody>
</table>

<div class="container-fluid" style="float: right;">
  <p><form method="POST" action="/profiles/{{profile.id}}/delete?_method=PUT">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>
</div>
