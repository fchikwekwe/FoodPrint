<h2>Welcome, {{profile.username}}!</h2>

<legend>Graph</legend>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Meal Eaten</th>
                <th scope="col">Food Name</th>
                <th scope="col">Carbon Output</th>
            </tr>
        </thead>
        <tbody>
            <tr id="">
                <th scope="row">(Example) Breakfast</th>
                <td>beef</td>
                <td>20 CO2e</td>
            </tr>
            {{#each food}}
            <tr id="">
                <th scope="row">{{food.meal}}</th>
                <td>{{food.name}}</td>
                <td>{{food.CO2e}} CO2e</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

